#!/bin/sh

# load colors from wal
[[ -f $HOME/.cache/wal/colors.sh ]] && source "$HOME/.cache/wal/colors.sh"

alias ka="killall" \
    sudo='sudo-rs' \
    dmenu='wmenu' \
    vi='/usr/bin/vim' \
    rm='trash-put' \
    ls="ls -hN --color=auto --group-directories-first" \
    grep="grep --color=auto" \
    diff="diff --color=auto" \
    ffmpeg="ffmpeg -hide_banner" \
    document_archlinux='$BROWSER /usr/share/doc/arch-wiki/html/en > /dev/null' \
    weather='curl wttr.in/yerevan' \
    cp='cp -iv' \
    paru='paru --bottomup' \
    tree='exa --tree --level=2 --long -a --header --git' \
    sl='ls' \
    noise='mpv ~/Music/white_noise.mp3' \
    diff='diff --strip-trailing-cr' \
    oneko='oneko -rv -fg \#CCCCCC -speed 13' \

command -v nvim >/dev/null && alias vim="nvim" vimdiff="nvim -d"
command -v nsxiv >/dev/null && alias sxiv="nsxiv" sxivdiff="nsxiv -d"

vf() { fzf | xargs -r -I % $EDITOR % ;}
