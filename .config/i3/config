set $mode_power [l]ogoff | [q]quit | [s]uspend
set $screen [b]uilt-in | [h]dmi

mode "$mode_power" {
    bindsym l exec i3-msg exit
    bindsym q exec systemctl poweroff
    bindsym s exec systemctl suspend
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

mode "$screen" {
    bindsym b exec --no-startup-id ~/github/config/.screenlayout/built-in.sh
    bindsym h exec --no-startup-id ~/github/config/.screenlayout/1080p_primary.sh
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
