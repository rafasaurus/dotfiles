# based off of:
# github.com/rafi i3status config

# i3status configuration file
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
	colors = true
	color_good = "#70ff96"
	color_bad = "#ff72ff"
	color_degraded = "#ffe772"
	interval = 2
}

order += "wireless wlp58s0"
order += "volume master"
# order += "load"
order += "cpu_usage"
order += "cpu_temperature 0"
order += "sysdata"
# order += "cpu_temperature 1"
# order += "cpu_temperature 2"
order += "memory"
order += "disk /"
# order += "backlight"
# order += "keyboard_layout"
order += "net_rate"
# order += "ipv6"
# order += "run_watch DHCP"
# order += "run_watch VPN"
# order += "wireless wlp2s0"
order += "battery 0"
order += "tztime local"

wireless wlp58s0 {
    format_up = "W:(%quality at %essid, %bitrate)%ip"
    format_down = "W:down"
}

volume master {
	format = " ♪: %volume " 
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

load {
#	format = " Δ: %1min "
	# termsyn font
	format = " Load: %1min"
}

cpu_usage {
	format = " CPU: %usage "
}

sysdata {
    cpu_freq_unit = 'MHz '
    format = " [{cpu_freq_avg}] Mhz"
    cache_timeout = 1
    high_threshold = 2000
}

cpu_temperature 0 {
	format = " %degrees°C "
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
	max_threshold = 70
}

cpu_temperature 1 {
	format = " %degrees°C "
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp2_input"
	max_threshold = 70
}
cpu_temperature 2 {
	format = " %degrees°C "
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp3_input"
	max_threshold = 70
}

disk "/" {
	format = " %avail:/ " 
}

wireless wlp2s0 {
	format_up = " W: (%quality at %essid) %ip "
	format_down = " WiFi Down "
}

run_watch DHCP {
	pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
	pidfile = "/var/run/vpnc/pid"
}

tztime local {
#	format = " %h-%d %H:%M ☰ "
	# termsyn font
	format = " %H:%M "
}

battery 0 {
	format = "%status %percentage %remaining (%consumption)"
	format_down = "No battery"
	status_chr = "⚇ CHR"
	status_bat = "⚡ BAT"
	status_full = "☻ FULL"
	low_threshold = 20
    integer_battery_capacity = true
	threshold_type = "time"
	path = "/sys/class/power_supply/BAT0/uevent"
}

memory {
        format = "M:%percentage_used"
        threshold_degraded = "10%"
        format_degraded = "MEMORY: %free"
}

backlight {
    cache_timeout = 0   
    format = " L: {level}% "
}

keyboard_layout {
    cache_timeout = 5
    format = " {layout}"
    color = "#FFFFFF"
    cache_timeout = 0.1
}

net_rate {
    # format = "{down} {up}"
    format = "{total}"
    precision = 0
    format_no_connection = ""
    cache_timeout = 0.85
}
