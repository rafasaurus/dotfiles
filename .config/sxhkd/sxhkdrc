# INSTALL XBINDKEYS AND SXKHD

alt+Return
    st
XF86AudioMute
    amixer -D pulse set Master toggle && notify-send "muted/unmuted"
# XF86AudioMute
#     pactl set-sink-mute 0 toggle || notify-send "Can't mute"
XF86AudioPlay
    playerctl play-pause
XF86AudioNext
    playerctl next
XF86AudioPrev
    playerctl previous
XF86AudioRaiseVolume
    amixer -D pulse sset Master 5%+
XF86AudioLowerVolume
    amixer -D pulse sset Master 5%-
XF86MonBrightnessUp
    xbacklight -inc 5 # increase screen brightness
alt+v
    xbacklight -inc 5 # increase screen brightness
XF86MonBrightnessDown
    xbacklight -dec 5 # decrease screen brightness
alt+c
    xbacklight -dec 5 # decrease screen brightness
Print
    maim $HOME/Pictures/$(date +"%Y-%m-%d_%H-%M-%S").png
shift+Print
    maim -o --nodecorations 2 -s $HOME/Pictures/$(date +"%Y-%m-%d_%H-%M-%S").png
# Caps_Lock
#     ~/.local/bin/scripts/tools/caps_state.sh
alt+shift+l
    ~/.local/bin/scripts/commands/kblyt
