[diff]
    tool = nvim
[difftool "nvim"]
    cmd = nvim -d "$LOCAL" "$REMOTE"
[merge]
    tool = nvim
[mergetool "nvim"]
    cmd = nvim -d "$LOCAL" "$REMOTE" "$MERGED"
[mergetool "vimdiff"]
    path = $EDITOR
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[includeIf "gitdir:~/workspace/"]
    path = workspace/.gitconfig-job
[includeIf "gitdir:~/sshfs/workspace/"]
    path = sshfs/workspace/.gitconfig-job
[includeIf "gitdir:~/sshfs1/workspace/"]
    path = sshfs1/workspace/.gitconfig-job
[core]
	autocrlf = input
    editor = $EDITOR
