#!/bin/sh
# run every 10 minutes with crontab -e 
# */2 * * * * export DISPLAY=:0.0 && $HOME/.local/bin/autored

current_hour=$(date +%H)
[ -f /tmp/noautored ] && redshift -x && exit 0
case $current_hour in
    00|01|02|03|04|05|06)
        redshift -PO 3000
        ;;
    07|08|09|10|11)
        redshift -x
        ;;
    12|13|14|15|16|17|18|19|20)
        redshift -x
        ;;
    21)
        redshift -PO 6000
        ;;
    22)
        redshift -PO 5000
        ;;
    23)
        redshift -PO 3500
        ;;
    *)
        echo "Invalid hour!"
        exit 1
        ;;
esac
