#!/bin/sh

if ! command -v wl-copy >/dev/null 2>&1; then
    notify-send "Error" "wl-copy is not installed."
    exit 1
fi

chosen=$(grep -v "#" ~/.local/share/.emoji | wmenu -i -l 20 -f "apple emoji color:size 18")

[ -n "$chosen" ] || exit
emoji=$(echo "$chosen" | awk '{print $1}')

echo -n "$emoji" | wl-copy
echo -n "$emoji" | wl-copy --primary

notify-send "Emoji Copied" "'$emoji' is ready to paste."
