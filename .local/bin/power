#!/bin/sh
choices=`echo "lock suspend suspend_and_lock bluetooth shutdown reboot screen_layout" | tr ' ' '\n'`

if command -v xmenu
then 
    chosen=$(echo -e "$choices" | xmenu -p 0x0)
else
    chosen=$(echo -e "$choices" | dmenu -i -p "Choose what to do ?" -l 15)
fi

echo $chosen
prompt=~/.local/bin/scripts/tools/prompt
case "$chosen" in
    lock) setxkbmap -layout 'us' && slock;;
    suspend) ~/.screenlayout/built-in.sh && setxkbmap -layout 'us' && $prompt "Do you want to lock?" "slock systemctl suspend" "systemctl suspend";;
    suspend_and_lock) ~/.screenlayout/built-in.sh && nordvpn disconnect && setxkbmap -layout 'us' && slock systemctl suspend  || slock systemctl suspend && setxkbmap -layout 'us';;
    bluetooth) rofi-bluetooth ;;
    shutdown) $prompt "Do you want to shutdown ?" "shutdown now";;
    reboot) $prompt "Do you want to shutdown ?" "reboot";;
    screen_layout) ~/.local/bin/scr ;;
esac
