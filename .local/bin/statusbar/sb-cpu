#!/bin/sh

source sb-essentials
case $BLOCK_BUTTON in
	1) notify-send "ðŸ–¥ CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)\\n(100% per core)" ;;
    2) cpupower-gui ;;
	# 2) POPUP_TERMINAL -e htop ;;
	3) notify-send "ðŸ–¥ CPU module " "\- Shows CPU temperature.
- Click to show intensive processes.
- Middle click to open htop." ;;
	6) POPUP_TERMINAL -e "$EDITOR" "$0" ;;
esac

clock=$(cat /sys/devices/system/cpu/cpufreq/policy0/scaling_cur_freq  | awk '{printf("%.1f\n", $1/1024000, fhz)}')
temp=$(sensors | awk '/Core 0/ {print "ðŸŒ¡" $3}')
echo $temp'|'$clock
