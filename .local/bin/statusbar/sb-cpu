#!/bin/sh

source sb-essentials
case $BLOCK_BUTTON in
	1) notify-send "üñ• CPU hogs" "$(ps axch -o cmd:15,%cpu --sort=-%cpu | head)\\n(100% per core)" ;;
    2) cpupower-gui ;;
	# 2) POPUP_TERMINAL -e htop ;;
	3) notify-send "üñ• CPU module " "\- Shows CPU temperature.
- Click to show intensive processes.
- Middle click to open htop." ;;
	6) POPUP_TERMINAL -e "$EDITOR" "$0" ;;
esac

freq=$(cat /sys/devices/system/cpu/cpufreq/policy0/scaling_cur_freq  | awk '{printf("%.1f\n", $1/1024000, fhz)}')
load=$(top -b -n1 | grep "Cpu(s)" | awk '{print $2 + $4}')

temp=$(sensors | awk '/Core 0/ {print "üå°" $3}')
echo $temp'|'$freq'|üèÉ'$load
