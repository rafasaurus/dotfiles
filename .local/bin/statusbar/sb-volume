#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

source sb-essentials

case $BLOCK_BUTTON in
	1) POPUP_TERMINAL -e pulsemixer ;;
	2) pamixer -t ;;
    4) amixer -D pulse sset Master 5%+ && kill -44 $(pidof dwmblocks);;
    5) amixer -D pulse sset Master 5%- && kill -44 $(pidof dwmblocks);;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) POPUP_TERMINAL -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

echo "$icon$vol%"
